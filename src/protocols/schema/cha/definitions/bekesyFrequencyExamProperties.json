{
  "description": "Bekesy Frequency Audiometry Exam Properties",
  "allOf": [
    { "$ref":"/cha/definitions/audiometryFrequencyProperties.json" },
    {
      "properties": {
        "ToneRepetitionInterval": {
          "type": "integer",
          "description": "Rate tones are presented, in ms. Overrides default inheritted from `audiometryProperties` properties",
          "default": 700,
          "maximum": 2000,
          "minimum": 450
        },
        "ReversalDiscard": {
          "type": "number",
          "description": "Reversals to discard",
          "default": 2,
          "maximum": 10,
          "minimum": 0
        },
        "ReversalKeep": {
          "type": "number",
          "description": "Reversals to keep, must be even",
          "default": 6,
          "maximum": 10,
          "minimum": 2,
          "multipleOf": 2
        },
        "IncrementStart": {
          "type": "number",
          "description": "Increment between presentations until first Reversal, in Octaves",
          "default": 0.166667,
          "maximum": 1.0,
          "minimum": 0.04166
        },
        "IncrementNominal": {
          "type": "number",
          "description": "Increment after first reversal, in Octaves",
          "default": 0.083333,
          "maximum": 1.0,
          "minimum": 0.04166
        }
      }
    }
  ]
}
